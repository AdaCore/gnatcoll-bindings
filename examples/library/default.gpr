with "gnatcoll";
with "gnatcoll_sqlite";   -- or "gnatcoll_postgres"

project Default is
   for Source_Dirs use ("obj",  --  automatically generated files
                        "src"); --  example files
   for Object_Dir use "obj";
   for Main use ("library.adb");

   package Compiler is
      for Switches ("Ada") use ("-gnat05", "-g");
   end Compiler;
   package Binder is
      for Switches ("Ada") use ("-E"); --  Get backtrace for exceptions
   end Binder;
end Default;
