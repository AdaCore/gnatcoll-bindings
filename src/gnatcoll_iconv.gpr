with "../gnatcoll_shared";
with "gnatcoll";

project GnatColl_Iconv is
   Name := "iconv";

   for Languages use ("Ada", "C");
   for Object_Dir
      use Gnatcoll_Shared'Object_Dir & "/" & Name & "/" & GnatColl_Shared.Library_Type;

   case GnatColl_Shared.Iconv is
      when "no" =>
        for Source_Dirs use ();
      when "yes" =>
        for Library_Kind    use GnatColl_Shared.Library_Type;
        for Library_Dir
           use Gnatcoll_Shared'Library_Dir & "/" & Name & "/" & Project'Library_Kind;
        for Library_Name    use GnatColl_Shared.Name & "_" & Name;
        for Library_Version use
           "lib" & Project'Library_Name
           & GnatColl_Shared.So_Ext & "." & GnatColl_Shared.Version;

        for Source_Dirs use ("iconv");

        case Gnatcoll_Shared.Library_Type is
           when "relocatable" =>
              for Library_Options use (GnatColl_Shared.Iconv_Dir)
                 & Gnatcoll_Shared.Iconv_Lib;
           when others =>
              null;
        end case;
   end case;

   package Compiler is
      for Switches ("Ada") use GnatColl_Shared.Compiler'Switches ("Ada");
      for Switches ("C") use GnatColl_Shared.Compiler'Switches ("C")
          & GnatColl_Shared.Iconv_Include;
   end Compiler;

   package Builder  renames GnatColl_Shared.Builder;
   package Ide      renames GnatColl_Shared.Ide;
   package Linker is
      case GnatColl_Shared.Iconv is
         when "no" =>
            null;
         when "yes" =>
            for Linker_Options use (Gnatcoll_Shared.Iconv_Dir) & Gnatcoll_Shared.Iconv_Lib;
      end case;
   end Linker;

end GnatColl_Iconv;
